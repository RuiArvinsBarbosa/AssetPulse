# ==========================================================
# AssetPulse .env - Default environment variables
# ==========================================================

# --- Data settings ---
DAYS=30                   # Default historical days to fetch
DATA_REFRESH_RATE=15      # Default refresh rate in minutes

# --- User defaults ---
APP_THEME=Light           # Light / Dark
DEFAULT_CURRENCY=USD
ENABLE_LOGGING=true       # true / false

# --- PostgreSQL credentials ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=assetpulse
POSTGRES_USER=assetpulse
POSTGRES_PASSWORD=pass

# --- API keys (optional) ---
# COINGECKO_API_KEY=
# YFINANCE_API_KEY=

# --- Logging / Debug ---
LOG_LEVEL=INFO            # DEBUG / INFO / WARNING / ERROR / CRITICAL

# --- Feature flags / future expansion ---
ENABLE_NOTIFICATIONS=false
ENABLE_EMAIL_ALERTS=false
ENABLE_AUTO_UPDATE=false
