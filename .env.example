# ==========================================================
# AssetPulse .env - Example environment variables
# ==========================================================

# --- Feature flags ---
USE_SUPABASE=true        # true = connect to Supabase, false = local Docker

# --- Local Docker PostgreSQL ---
LOCAL_POSTGRES_HOST=localhost
LOCAL_POSTGRES_PORT=5432
LOCAL_POSTGRES_DB=assetpulse
LOCAL_POSTGRES_USER=assetpulse
LOCAL_POSTGRES_PASSWORD=your_local_password_here

# --- Supabase PostgreSQL ---
SUPABASE_POSTGRES_HOST=db.yoursupabase.co
SUPABASE_POSTGRES_PORT=5432
SUPABASE_POSTGRES_DB=postgres
SUPABASE_POSTGRES_USER=postgres
SUPABASE_POSTGRES_PASSWORD=your_supabase_password_here

# --- Data settings ---
DAYS=30
DATA_REFRESH_RATE=15

# --- User defaults ---
APP_THEME=Light
DEFAULT_CURRENCY=USD
ENABLE_LOGGING=true

# --- API keys ---
# COINGECKO_API_KEY=your_coingecko_api_key_here
# YFINANCE_API_KEY=your_yfinance_api_key_here

# --- Logging / Debug ---
LOG_LEVEL=INFO

# --- Feature flags / future expansion ---
ENABLE_NOTIFICATIONS=false
ENABLE_EMAIL_ALERTS=false
ENABLE_AUTO_UPDATE=false
